<resources>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!--<item taskName="android:windowBackground">@color/colorBackground</item>-->
        <!-- Buttons -->
        <item name="materialButtonStyle">@style/ButtonTheme.RoundCorners</item>
        <!--<item taskName="materialButtonOutlinedStyle">-->
        <!--@style/Widget.MaterialComponents.Button.OutlinedButton-->
        <!--</item>-->
        <!--<item taskName="materialButtonToggleGroupStyle">-->
        <!--@style/Widget.MaterialComponents.MaterialButtonToggleGroup-->
        <!--</item>-->
        <!-- Colors -->
        <item name="colorPrimary">@color/lightPrimary</item>
        <item name="colorPrimaryDark">@color/LightPrimaryDark</item>
        <item name="colorAccent">@color/LightAccent</item>

        <item name="android:windowBackground">@drawable/bg</item>

        <item name="colorError">@color/design_default_color_error</item>
        <item name="android:textViewStyle">@style/AppTheme.Text.Normal</item>

        <!--<item taskName="actionBarSize">@dimen/mtrl_toolbar_default_height</item>-->
        <!--<item taskName="minTouchTargetSize">@dimen/mtrl_min_touch_target_size</item>-->
    </style>

    <style name="AppTheme.Text">
        <item name="android:textColor">@color/LightText</item>
        <!--<item taskName="android:typeface">sans</item>-->
    </style>

    <style name="AppTheme.Text.Small">
        <item name="android:textSize">@dimen/sizeTextSmall</item>
    </style>

    <style name="AppTheme.Text.Normal">
        <item name="android:textSize">@dimen/sizeTextNormal</item>
    </style>

    <style name="AppTheme.Text.Title">
        <item name="android:textSize">@dimen/sizeTextTitle</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonTheme.RoundCorners" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/sizeRoundCornerRadiusLayout</item>
        <item name="android:paddingTop">@dimen/sizeButtonPaddingVertical</item>
        <item name="android:paddingBottom">@dimen/sizeButtonPaddingVertical</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="BottomSheetDialogTheme.Transparent" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetTheme.Transparent</item>
    </style>

    <style name="BottomSheetTheme.Transparent" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_round_top_corners</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.MaterialComponents.TabLayout">
        <!--<item taskName="tabMaxWidth">@dimen/tab_max_width</item>-->
        <!--<item taskName="tabIndicatorColor">?attr/colorAccent</item>-->
        <!--<item taskName="tabIndicatorHeight">2dp</item>-->
        <!--<item taskName="tabPaddingStart">12dp</item>-->
        <!--<item taskName="tabPaddingEnd">12dp</item>-->
        <!--<item taskName="tabBackground">?attr/selectableItemBackground</item>-->
        <!--<item taskName="tabTextAppearance">@style/TextAppearance.Design.Tab</item>-->
        <item name="tabSelectedTextColor">@color/lightPrimary</item>
        <item name="tabIndicatorColor">@color/lightPrimary</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="ButtonTheme.Cancel" parent="Theme.MaterialComponents">
        <item name="materialButtonStyle">@style/ButtonTheme.RoundCorners</item>
        <item name="colorPrimary">@color/LightCancelButtonBackground</item>
        <item name="colorPrimaryDark">@color/LightPrimaryDark</item>
        <item name="colorAccent">@color/LightAccent</item>
        <item name="android:colorBackground">@color/LightBackground</item>
    </style>

    <style name="TextTheme.Error" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/LightErrorText</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat"/>
</resources>
