<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:context=".CreateOrEditRemindDialog">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/shape_round_corners_bg"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            >

        <TextView
                android:textStyle="bold"
                android:textSize="@dimen/sizeTextTitle"
                android:id="@+id/titleTextView"
                tools:text="label"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <View
                android:background="@color/lightWeakGray"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        <TextView
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:background="@drawable/shape_round_corners_bg_dark"
                tools:text="08/10/1998"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/sizeTextDateTime"
                android:id="@+id/dateTextView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
        />

        <TextView
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/dateTextView"
                app:layout_constraintStart_toStartOf="@id/dateTextView"
                app:layout_constraintEnd_toEndOf="@id/dateTextView"
                android:background="@drawable/shape_round_corners_bg_dark"
                tools:text="09:00"
                android:textSize="@dimen/sizeTextDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/timeTextView"
        />

        <EditText
                android:textColor="@color/LightPrimaryDark"
                android:textColorHint="@color/lightPrimary"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:hint="@string/description"
                android:layout_marginTop="16dp"
                android:background="@drawable/shape_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/descEditText"
                app:layout_constraintTop_toBottomOf="@id/timeTextView"
        />
        <Button
                android:text="@string/cancel"
                android:theme="@style/ButtonTheme.Cancel"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/positiveButton"
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descEditText"
                android:layout_marginTop="16dp"
        />
        <Button
                tools:text="label"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/cancelButton"
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descEditText"
                android:layout_marginTop="16dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
